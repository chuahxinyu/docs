---
const { type, summary } = Astro.props;
const infoIcon = "fa-circle-info";
---

<div class="toast p-3 my-3 rounded-md border-solid border-blue-600 border-2">
  {
    type.includes("col") ? (
      <details>
        <summary class="cursor-pointer font-bold text-blue-500">
          <span class={`fa-solid mx-2`} />
          {summary}
        </summary>
        <slot />
      </details>
    ) : (
      <span class="!m-0">
        <slot class="!m-0" />
      </span>
    )
  }
</div>
