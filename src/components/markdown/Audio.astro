---
const { mp3Src, oggSrc, wavSrc } = Astro.props;
---

<audio controls="controls">
  <source type="audio/mp3" src={mp3Src} />
  {oggSrc && <source type="audio/ogg" src={oggSrc} />}
  {wavSrc && <source type="audio/wav" src={wavSrc} />}
  <p>Your browser does not support the audio element.</p>
</audio>
